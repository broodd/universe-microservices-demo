{
  "name": "universe-microservices-demo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "seed:secrets": "mkdir -p apps/products/.secrets && cp -r apps/products/.secrets.example/* apps/products/.secrets/",
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "start:products": "nx serve products",
    "start:notifications": "nx serve notifications",
    "start:all": "nx run-many --target=serve --all --parallel",
    "build": "nx run-many --target=build --all",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:generate": "ts-node -r tsconfig-paths/register node_modules/drizzle-kit/bin.cjs generate --config=apps/products/src/database/drizzle.config.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register --project ./tsconfig.base.json node_modules/drizzle-kit/bin.cjs migrate --config=apps/products/src/database/drizzle.config.ts"
  },
  "private": true,
  "dependencies": {
    "@fastify/basic-auth": "^6.2.0",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.5.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint": "20.1.0",
    "@nx/eslint-plugin": "20.1.0",
    "@nx/jest": "20.1.0",
    "@nx/js": "20.1.0",
    "@nx/nest": "20.1.0",
    "@nx/node": "20.1.0",
    "@nx/web": "20.1.0",
    "@nx/webpack": "20.1.0",
    "@nx/workspace": "20.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "20.1.0",
    "prettier": "^2.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.49.0",
    "webpack-cli": "^5.1.4"
  }
}
